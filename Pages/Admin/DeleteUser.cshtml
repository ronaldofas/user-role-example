@page
@model UserAccessControl.Pages.Shared.Admin.DeleteUserModel
@{
    ViewData["Title"] = "Deletar Usuário";
}

<h2>@ViewData["Title"]</h2>

<h3>Você tem certeza que deseja deletar o usuário?</h3>
<div>
    <h4>@Model.User.UserName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.User.Email</dd>
        <dt class="col-sm-2">Role</dt>
        <dd class="col-sm-10">@Model.User.Role</dd>
    </dl>
</div>

<form method="post">
    <input type="hidden" asp-for="User.Id" />
    <button type="submit" class="btn btn-danger">Deletar</button>
    <a asp-page="/Admin/ManageUsers" class="btn btn-secondary">Cancelar</a>
</form>
