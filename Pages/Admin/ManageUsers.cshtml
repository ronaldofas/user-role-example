@page
@model UserAccessControl.Pages.Admin.ManageUsersModel
@{
    ViewData["Title"] = "Gerenciamento de Usuários";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>Nome do usuário</th>
            <th>Email</th>
            <th>Função (Role)</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.Role</td>
                <td>
                    <a asp-page="/Admin/EditUser" asp-route-id="@user.Id" class="btn btn-primary">Editar</a>
                    <a asp-page="/Admin/DeleteUser" asp-route-id="@user.Id" class="btn btn-danger">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
