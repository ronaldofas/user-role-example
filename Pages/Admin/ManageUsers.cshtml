@page
@model UserAccessControl.Pages.Shared.Admin.ManageUsersModel
@{
    ViewData["Title"] = "Manage Users";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>UserName</th>
            <th>Email</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.Role</td>
                <td>
                    <a asp-page="/Admin/EditUser" asp-route-id="@user.Id" class="btn btn-primary">Edit</a>
                    <a asp-page="/Admin/DeleteUser" asp-route-id="@user.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
